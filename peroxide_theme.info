name = Peroxide Theme
description = A starter theme for the peroxide theme engine.
version = VERSION
core = 7.x
engine = peroxide

; Regions
regions[header] = Header
regions[help] = Help
regions[highlight] = Highlight
regions[sidebar_first] = Sidebar First
regions[sidebar_second] = Sidebar Second
regions[content] = Content
regions[page_top] = Page Top
regions[page_bottom] = Page Bottom
regions[indicators] = Indicators

; Add stylesheets
stylesheets[all][] = css/style.css
stylesheets[all][] = css/tabs.css
stylesheets[all][] = css/forms.css

; Add Sass
sass[all][] = scss/base.sass
sass[all][] = scss/layout.sass
sass[all][] = scss/messages.scss
sass[all][] = scss/typography.sass

; Set parser options
peroxide[options][sass][style] = "compact"
