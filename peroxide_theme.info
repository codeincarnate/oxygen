name = Peroxide Theme
description = A starter theme for the peroxide theme engine.
version = VERSION
core = 6.x
engine = peroxide

; Add stylesheets
stylesheets[all][] = css/style.css
stylesheets[all][] = css/tabs.css
stylesheets[all][] = css/forms.css

; Add Sass
sass[all][] = scss/base.sass
sass[all][] = scss/layout.sass
sass[all][] = scss/messages.scss
sass[all][] = scss/typography.sass

; Set parser options
peroxide[options][sass][style] = "compact"